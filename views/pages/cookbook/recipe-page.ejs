<div class="container my-4">

  <div class="recipe-container card mx-auto">
    <div class="card-body d-relative">
      <button id="print-btn" class="btn btn-primary" onclick="window.print();return false;"><i class="fa-solid fa-print"></i></button>
      <h1 class="text-center"><%= recipe.title %></h1>
      <p class="text-center recipe-meta">
        Created by <strong><%= recipe.author %></strong> on
        <%= new Date(recipe.created_at).toLocaleDateString() %>
      </p>

      <!-- Recipe Image -->
      <div class="w-100 my-3">
        <img id="recipe-page-img" src="<%= recipe.image_url %>" alt="Image of <%= recipe.title %>" class="recipe-img img-fluid d-block mx-auto" />
      </div>

      <!-- Recipe Info -->
      <div class="recipe-details px-4 pb-1">
        <p class="lead"><%= recipe.description %></p>
        <hr width="100%" size="2">
        <div id="servings-time-container" class="d-flex justify-content-between">
          <p><strong>Cooking Time:</strong> <%= recipe.cooking_time %> min</p>
          <% console.log(recipe.ingredients) %>
          <p><strong>Servings:</strong> <%= recipe.servings %></p>
        </div>
        <h3>Ingredients</h3>
        <p style="white-space: pre-line"><%= recipe.ingredients %></p>

        <h3>Instructions</h3>
        <p style="white-space: pre-line"><%= recipe.instructions %></p>
      </div>
    </div>
  </div>
</div>