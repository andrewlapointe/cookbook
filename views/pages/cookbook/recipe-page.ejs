<div class="container">
  <div class="recipe-container">

    <h1 class="text-center"><%= recipe.title %></h1>
    <p class="text-center recipe-meta">Created by <strong><%= recipe.author %></strong> on <%= new Date(recipe.created_at).toLocaleDateString() %></p>

    <!-- Recipe Image -->
    <img src="<%= recipe.image_url %>" alt="Image of <%= recipe.title %>" class="recipe-img img-fluid">

    <!-- Recipe Info -->
    <div class="recipe-details">
      <p class="lead"><%= recipe.description %></p>

      <div class="d-flex justify-content-between">
        <p><strong>Cooking Time:</strong> <%= recipe.cooking_time %> min</p>
        <p><strong>Servings:</strong> <%= recipe.servings %></p>
      </div>

      <h3>Ingredients</h3>
      <p><%= recipe.ingredients %></p>

      <h3>Instructions</h3>
      <p><%= recipe.instructions %></p>
    </div>
  </div>
</div>